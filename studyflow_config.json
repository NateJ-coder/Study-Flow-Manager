{
  "app": {
    "name": "StudyFlow",
    "timezone_default": "Africa/Johannesburg",
    "developer_mode": {
      "test_rain_no_lockout": false
    }
  },
  "paths": {
    "root": "./",
    "images": {
      "backgrounds": "assets/images"
    },
  "audio": "assets/audio",
    "js": "assets/js",
    "css": "assets/CSS",
    "data": "data"
  },
  "backgrounds": {
    "seasons": {
      "summer": {
        "day_pattern": "summer-day-1.png",
        "night_pattern": "summer-night-1.png",
        "count_per_cycle": 8,
        "ui_tint": [
          "#dff6ff",
          "#b7f0c6"
        ],
        "timer_text_color": "#ffffff",
        "particles_day": "leaves-green",
        "particles_night": "fireflies"
      },
      "autumn": {
        "day_pattern": "autumn-day-1.png",
        "night_pattern": "autumn-night-1.png",
        "count_per_cycle": 8,
        "ui_tint": [
          "#ffd9b3",
          "#c88a44"
        ],
        "timer_text_color": "#ffffff",
        "particles_day": "leaves-burnt_orange_brown",
        "particles_night": "fireflies"
      },
      "winter": {
        "day_pattern": "winter-day-1.png",
        "night_pattern": "winter-night-1.png",
        "count_per_cycle": 8,
        "ui_tint": [
          "#dbe9ff",
          "#bed3f7"
        ],
        "timer_text_color": "#000000",
        "particles_day": "snowflakes",
        "particles_night": "fireflies"
      }
    },
    "rain": {
      "pattern": "rain-bg-1.png",
      "count": 9,
      "ui_tint": [
        "#9fc5e8",
        "#dbe9ff"
      ],
      "locks_settings": true,
      "button_effects": {
        "ripple": true,
        "wet_style": true
      },
      "timer_text_color": "#d8eef7",
      "particles": "rain",
  "audio": "assets/audio/rainfall.mp3"
    }
  },
  "slideshow": {
    "enabled_default": true,
    "interval_seconds_default": 30,
    "fade_ms": 900
  },
  "day_night": {
    "source": "system_clock",
    "switch_behavior": {
      "day_particles_to_night": "fireflies"
    }
  },
  "rain_cycle": {
    "start_on_app_open": true,
    "repeats_every_minutes": 120,
    "duration_minutes": 45,
    "lockout_warning_text": "It's raining! Don't touch the electronics! you will get shocked!",
    "shock_animation_enabled": true
  },
  "timer": {
    "technique": "pomodoro",
    "sessions_default": 4,
    "work_minutes_default": 25,
    "short_break_minutes_default": 5,
    "long_break_minutes_default": 20,
    "short_breaks_before_long_default": 3,
    "sounds": {
  "work_done": "assets/audio/splash.mp3",
  "break_done": "assets/audio/splash.mp3"
    },
    "hourglass": {
      "synced_to_timer": true,
      "sand_color_by_theme": {
        "rain": "#4aa3df",
        "summer": "#f7f7f7",
        "autumn": "#f7f7f7",
        "winter": "#222222"
      }
    },
    "frame": {
      "svg_path": "assets/images/frame.svg",
      "display_on_timer": true
    },
    "inactivity": {
      "shrink_ui_after_seconds": 120,
      "show_only_remaining_time": true
    }
  },
  "clock": {
    "show_on_all_pages": true,
    "theme_overlays": {
      "summer": [
        "bird_on_top"
      ],
      "autumn": [
        "spider_from_web",
        "jackolantern_on_top"
      ],
      "winter": [
        "snow_cover",
        "snowman_on_top"
      ],
      "rain": [
        "raindrops",
        "blur_distortion"
      ]
    },
    "reminders_dropdown": {
      "resting_on_inactivity": true
    }
  },
  "calendar": {
    "draw_cross_on_right_click": {
      "enabled": true,
  "sound": "assets/audio/drawing.mp3",
      "color_default": "#ff4d4d"
    },
    "left_click_task_popup": {
      "enable_tasks": true,
      "allow_check_off": true,
      "allow_move_incomplete_to_next_day": true,
      "encouragement_on_move": true
    },
    "reminders": {
      "enabled": true
    },
    "theme_follows_season": true
  },
  "mouse_trails": {
    "summer": "leaves-green",
    "autumn": "leaves-brown",
    "winter": "snowflakes"
  },
  "navigation": {
    "pages": [
      "timer",
      "calendar",
      "settings"
    ],
    "sidebar_icons": {
      "hover_to_reveal_ms": 0,
      "auto_hide_after_ms": 3000,
      "show_rule": {
        "timer_page": [
          "settings",
          "calendar"
        ],
        "calendar_page": [
          "timer",
          "settings"
        ],
        "settings_page": [
          "timer",
          "calendar"
        ]
      }
    }
  },
  "settings_page": {
    "controls": [
      "calendar_cross_color",
      "background_brightness",
      "frame_opacity",
      "season",
      "timezone",
      "slideshow_enabled",
      "slideshow_interval_seconds",
      "pomodoro_sessions",
      "work_minutes",
      "short_break_minutes",
      "long_break_minutes",
      "short_breaks_before_long"
    ],
    "weather_and_rain": {
      "developer_mode_test_rain_no_lockout": false
    }
  },
  "firebase": {
    "apiKey": "AIzaSyDiY_fxXuLNSTgpPIiHTkmvSAlT-Owqkgc",
    "authDomain": "studyflowapp-2dfd0.firebaseapp.com",
    "projectId": "studyflowapp-2dfd0",
    "storageBucket": "studyflowapp-2dfd0.firebasestorage.app",
    "messagingSenderId": "292...",
    "appId": "1:292..."
  },
  "external_links": {
    "docs": [],
    "support": [],
    "repo": []
  }
}